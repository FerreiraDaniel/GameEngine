package gameEngine.shaders.terrains;

/**
 * Enumeration with textures
 */
public enum TTerrainTexture {
	/**
	 * The background texture
	 */
	backgroundTexture,

	/**
	 * The mud texture
	 */
	mudTexture,

	/**
	 * The grass texture
	 */
	grassTexture,

	/**
	 * The path texture
	 */
	pathTexture,

	/**
	 * The blend map texture
	 */
	weightMapTexture
	
	/**
	 * Meta-data used maintain the existing textures
	 */
	numOfTerrainTextures
}
